<% @individual_task.each do |task| %>
  <h5>Task Name:</h5>
  <p><%= task['name'] %></p>
  <h5>Task Details:</h5>
  <p><%= task['details'] %></p>
  <a href="/tasks/<%= task['id'] %>/edit">Edit This Task</a>
  <br>
  <hr>

  <form action='/tasks/<%= task['id'] %>/delete' method='post'><input type='submit' value='Delete This Task'>
  </form>
<% end %>